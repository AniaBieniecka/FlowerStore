@model IEnumerable<Product>

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@product.ImageUrl" class "card-img-top rounded"/>
                        <div class="card-body pb-0">
                            <p class="card-title h5 text-dark opacity-75  text-center">@product.Name</p>
                            <p class="text-dark opacity-75 text-center"><b>@product.Price.ToString("c")</b> </p>
                        </div>
                        <a asp-action="Details" asp-route-productID="@product.ProductID" class="btn btn-primary bg-gradient border-0 form-control">Details</a>
                    </div>

                </div>
            </div>
        </div>
    }
</div>