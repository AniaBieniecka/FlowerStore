

<div class="card border-primary-0 mt-4">
    <div class="card-header  bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center text-primary">
                <h2 class=" py-2">Company List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pt-4 pb-2">
            <div class="col-6">
                <a asp-controller="Company" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-square"></i>
                    Create New Company
                </a>
            </div>
        </div>

        <table id="tblData" class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Street address</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Postal code</th>
                    <th>Phone number</th>
                    <th></th>
                </tr>
            </thead>

        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/company1.js"></script>
}